// TAGS
item ::= PROGRAMME_DOMUS_OPEN_TAG:s {:
	if(!stack.isEmpty()) {
		throw new Exception("DOMUS program should start with PROGRAMME_DOMUS_OPEN_TAG");
	}

	stack.push("PROGRAMME_DOMUS_OPEN_TAG");
	createFile();
:};
